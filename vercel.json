{
  "version": 2,
  "name": "banking-system",
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DB_TYPE": "postgres",
    "JWT_SECRET": "@jwt_secret",
    "DB_HOST": "@db_host",
    "DB_PORT": "@db_port",
    "DB_USERNAME": "@db_username", 
    "DB_PASSWORD": "@db_password",
    "DB_DATABASE": "@db_database"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "dist/index.js": {
      "maxDuration": 30
    }
  }
}